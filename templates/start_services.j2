#!/bin/bash
# {{ ansible_managed }}

{% for item in certbot_create_stop_services %}
echo "starting service {{ item }}"
{% if ansible_service_mgr == 'systemd' %}
systemctl start {{ item }}
{% elif ansible_service_mgr == 'launchd' %}
su - {{ homebrew_user }} -c "brew services start {{ item }}"
{% else %}
service {{ item }} start
{% endif %}
{% endfor %}